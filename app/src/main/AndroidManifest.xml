<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="stannis.ru.productionsimulator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".MarketActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Credit_DepositActivity"
            android:parentActivityName=".BankActivity" />
        <activity
            android:name=".BankActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".StaffActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MailActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MessageActivity"
            android:parentActivityName=".MailActivity" />
        <activity
            android:name=".WorkerActivity"
            android:parentActivityName=".BankActivity" />
        <activity
            android:name=".FactoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".InventoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ResetCredit_Deposit"
            android:parentActivityName=".BankActivity" />
        <activity android:name=".EndDayActivity" />
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListProductionActivity" />
        <activity android:name=".GameOverActivity"></activity>
    </application>

</manifest>