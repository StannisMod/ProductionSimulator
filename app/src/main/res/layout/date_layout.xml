<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="bottom"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorTextMessageActivity">

    </LinearLayout>

    <TextView
        android:id="@+id/curDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:text="13.06.18"
        android:textColor="@color/colorNameTextMailActivity"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/endDay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/curDate">

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/arrow" />

        <TextView
            android:layout_toLeftOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:text="Закончить день:"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />
    </RelativeLayout>


</RelativeLayout>